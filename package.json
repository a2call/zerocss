{
  "name": "zerocss",
  "version": "0.0.7",
  "description": "A CSS utility classes library",
  "author": "Jonathan Verrecchia <hello@verekia.com> (http://verekia.com)",
  "repository": "verekia/zerocss",
  "license": "MIT",
  "homepage": "https://github.com/verekia/zerocss#readme",
  "bugs": {
    "url": "https://github.com/verekia/zerocss/issues"
  },
  "main": "./lib/index.js",
  "scripts": {
    "generatecss": "node lib/all-utils.js",
    "build": "babel src -d lib && npm run generatecss",
    "build:tests": "babel tests/src -d tests/lib",
    "consumer": "npm run build && node consumer.js",
    "tests": "npm run build:tests && tape tests/lib/**/*.js | tap-spec",
    "clean": "rm -rf lib dist tests/lib",
    "prepublish": "npm run build && npm run tests && echo 'Ready to publish!'"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "fs-extra": "^0.30.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1"
  }
}
